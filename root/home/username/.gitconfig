[alias]
  st = status
  ci = commit
  br = branch -vv
  bra = branch -vva
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p --follow
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  ignored = !git ls-files -v `git rev-parse --show-toplevel` | grep "^[a-z]"
  rup = remote update --prune
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  autocrlf = input
  fileMode = false
[diff]
  compactionHeuristic = true
[interactive]
  diffFilter = diff-highlight
[pager]
  diff = diff-highlight | less
  log = diff-highlight | less
  show = diff-highlight | less
[push]
  default = current
  recurseSubmodules = check
[stash]
  showStat = true
[user]
  email = xyz@mail.de
  name = xyz
